<!--Old Posts-->
<div class="container py-5 mt-5">
  <h1 class="text-center display-4 pb-3">Forum</h1>
  <% if(posts.length == 0) { %>
  <p class="lead text-center">There are no posts to display</p>
  <% } %>
  <% for(let i = posts.length-1; i >= 0; i--) { %>
  <div class="card my-3">
    <div class="card-header">
      <h3 class="card-title"><%= posts[i].title %></h3>
      <h5 class="card-subtitle text-muted mb-2">Author: <%= posts[i].author %></h5>
      <p class=card-text>Date Posted: <%= posts[i].date %></p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= posts[i].body %></p>
    </div>
  </div>
  <% } %>
</div>
<!--End of Old Posts-->

<!--New Post Form-->
<div class="modal fade" id="newpost" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100">Make a New Post</h4>
        <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> -->
      </div>
      <div class="modal-body mx-3">
        <form action="forum/addpost" class="md-form mb-3" method="POST">
          <div class="md-form mb-3">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter Title of Post"
              required />
          </div>
          <div class="md-form mb-3">
            <label for="body">Body</label>
            <textarea name="body" class="form-control md-textarea" style="height:500px" placeholder="Enter Body of Post"
              required></textarea>
          </div>
          <input type="hidden" name="author" value="<%= name %>" />
      </div>
      <div class=" modal-footer d-flex justify-content-center">
        <input type="submit" class="btn btn-outline-primary" value="Add Post" />
        <button class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
      </div>
      </form>
    </div>
  </div>
</div>
<!--End of New Post Form-->

<!--New Post Button-->
<div class="fixed-bottom">
  <div class="float-right">
    <a href="#" data-toggle="modal" data-target="#newpost" style="color:white;">
      <button type="button" class="btn btn-primary btn-lg" style="border-radius:100%; margin:20px 20px;">
        +
      </button>
    </a>
  </div>
</div>
<!--End of New Post Button-->

